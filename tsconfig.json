    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src", "typings", "browser", "node"],
  "exclude": ["node_modules"]
}